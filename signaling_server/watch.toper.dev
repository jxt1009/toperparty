server {
    listen 443 ssl;
    server_name watch.toper.dev;

    ssl_certificate /etc/letsencrypt/live/watch.toper.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/watch.toper.dev/privkey.pem;

    location /ws {
        proxy_pass http://signaling:3000;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_read_timeout 60s;
    }
}
