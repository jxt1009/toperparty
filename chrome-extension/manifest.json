{
  "manifest_version": 3,
  "name": "Netflix Party Sync",
  "version": "1.0.0",
  "description": "Watch Netflix with friends in sync with webcam/mic sharing",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "tabs",
    "mediaStream"
  ],
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Party Sync",
    "default_icons": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    }
  },
  "icons": {
    "16": "images/icon16.svg",
    "48": "images/icon48.svg",
    "128": "images/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}
